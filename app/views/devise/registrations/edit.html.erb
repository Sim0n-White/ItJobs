<div class="main_container container", style="padding-top: 30px;">
  <h1>Редактировать пользователя <%= current_user.email %></h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= bootstrap_devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label 'Пароль' %>
      <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control' %>

      <small class="form-text text-muted">Оставьте поле пустым, если не хотите менять пароль</small>
    </div>

    <div class="form-group">
      <%= f.label 'Повторите пароль' %>
      <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control'  %>

      <small class="form-text text-muted">Оставьте поле пустым, если не хотите менять пароль</small>
    </div>

    <div class="form-group">
      <%= f.label 'Текущий пароль' %>
      <%= f.password_field :current_password, autocomplete: 'current-password', class: 'form-control' %>

      <small class="form-text text-muted">Для подтверждения изменений введите текущий пароль</small>
    </div>

    <div class="form-group">
      <%= f.submit 'Обновить', class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= link_to 'Удалить аккаунт?', registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete, style: "color: red" %><br>

  <%= link_to 'На главную', root_path %>
</div>
