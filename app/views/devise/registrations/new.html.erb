<div class="reg_container container", style="padding-top: 30px;">
  <%= form_for(resource, as: resource_name, :html => { :id => "signup" }, url: registration_path(resource_name)) do |f| %>

    <div class="header">
      <h3>Регистрация</h3>
      <p>в приложении ItJobs</p>
    </div>

    <div class="sep"></div>

    <div class="inputs">
      <%= bootstrap_devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label 'Пароль' %>
        <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control' %>
        <% if @minimum_password_length %>
          <small class="form-text text-muted"> минимум 6 символов </small>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label 'Подтверждение пароля' %>
        <%= f.password_field :password_confirmation, autocomplete: 'current-password', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit 'Зарегистрироваться', class: 'btn btn-primary' %>
      </div>

    </div>

    <%= render 'devise/shared/links' %>

  <% end %>

</div>
