.container
  .row.mt-4.mb-4.align-items-center.align-items-lg-baseline
    .col-sm-7
      %h1 Вакансии для разработчиков
    .col-sm-5
      .d-flex.justify-content-lg-end
        = link_to 'Разместить вакансию', new_employer_vacancy_path, class: 'btn btn-primary'
  .ul.list-group
    - @vacancies.each do |vacancy|
      .li.list-group-item
        .row
          .col-sm-8
            %h4
              = vacancy.company_name
          .col-sm-4
            = vacancy.company_site
        .row
          .col-sm-8
            = vacancy.contact_email
          .col-sm-4
            = vacancy.contact_person
            = vacancy.position
        = vacancy.contact_person
  = pagy_bootstrap_nav(@pagy).html_safe
